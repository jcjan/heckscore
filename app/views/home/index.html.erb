<h1>ScoreHeck!</h1>

<h3>Players</h3>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
    <tr>
      <td><%= player.id %></td>
      <td><%= player.name %></td>
      <td><%= link_to 'Show', player_path(player) %></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'New Player', new_player_path %></td>
      <td></td>
      <td></td>
    </tr>
  </tfoot>
</table>

<h3>Games</h3>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
    <tr>
      <td><%= game.id %></td>
      <td><%= game.date %></td>
      <td><%= link_to 'Show', game_path(game) %></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'New Game', new_game_path %></td>
      <td></td>
      <td></td>
    </tr>
  </tfoot>
</table>
