<h3>Players</h3>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
    <tr>
      <td><%= player.id %></td>
      <td><%= player.name %></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'New Player', new_player_path %></td>
      <td></td>
      <td></td>
    </tr>
  </tfoot>
</table>

<h3>Games</h3>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Players</th>
      <th>Date</th>
      <th>Status</th>
      <th>Winner</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
    <tr>
      <td><a href="/games/<%= game.id %>/score"><%= game.id %></a></td>
      <td><%= game.size %></td>
      <td><%= game.date %></td>
      <td><%= game.status %></td>
      <td>
        <% if game.winner %>
          <%= game.winner.name %>
        <% else %>
          -
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'New Game', new_game_path %></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  </tfoot>
</table>
