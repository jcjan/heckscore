<table class="table">
  <thead>
    <tr>
      <th>Cards</th>
      <% @game.game_players.each do |gp| %>
        <th><%= gp.player.name %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @game.hands.each do |hand| %>
      <tr>
        <td><%= hand.card_count %></td>
        <% hand.hand_players.each do |hp| %>
          <td style="<%= 'color: red' if hp.got_set %>">
            <%= hp.bid %> - <%= hp.tricks %> | <%= hp.game_score %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
